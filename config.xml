<?xml version="1.0" encoding="UTF-8"?>
<widget id="com.example.facewebapp" version="1.0.0"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android">

  <name>FaceWebApp</name>
  <description>Browser-based camera HTML app</description>
  <author email="you@example.com">You</author>

  <content src="index.html" />
  <access origin="*" />
  <allow-navigation href="*" />

  <preference name="AndroidInsecureFileModeEnabled" value="true" />
  <preference name="AndroidLaunchMode" value="singleTop" />
  <preference name="android-minSdkVersion" value="22" />

  <platform name="android">
    <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/uses-permission">
        <uses-permission android:name="android.permission.CAMERA" />
    </edit-config>
  </platform>

  <plugin name="cordova-plugin-whitelist" />
</widget>
