<?xml version="1.0" encoding="UTF-8"?>
<widget id="com.example.facewebapp" version="1.0.0"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <name>FaceWebApp</name>
    <description>HTML5 face recognition app with camera</description>
    <author email="you@example.com">Your Name</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*" />
    <platform name="android">
        <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/uses-permission">
            <uses-permission android:name="android.permission.CAMERA" />
        </edit-config>
    </platform>
</widget>
